<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/backgroud_edit</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor">?attr/backgroud_calculator</item>
        <!-- Customize your theme here. -->
        <item name="backgroud_calculator">@color/backgroud_calculator_night</item>
        <item name="backgroud_edit">@color/backgroud_edit_night</item>
        <item name="backgroud_number">@color/backgroud_number_night</item>
        <item name="backgroud_number_pressed">@color/backgroud_number_pressed_night</item>
        <item name="backgroud_clear">@color/backgroud_clear_night</item>
        <item name="backgroud_clear_pressed">@color/backgroud_clear_pressed_night</item>
        <item name="backgroud_equals">@color/backgroud_equals_night</item>
        <item name="backgroud_equals_pressed">@color/backgroud_equals_pressed_night</item>
        <item name="backgroud_operator">@color/backgroud_operator_night</item>
        <item name="backgroud_operator_pressed">@color/backgroud_operator_pressed_night</item>
        <item name="backgroud_operator_small_pressed">@color/backgroud_operator_small_pressed_night</item>
        <item name="textcolor_calculator">@color/textcolor_calculator_night</item>
        <item name="colorAccent">@color/textcolor_calculator_night</item>
    </style>
</resources>